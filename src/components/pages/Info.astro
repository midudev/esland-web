---
import Layout from "@/layouts/Layout.astro";
import HeroContainer from "@/components/HeroContainer.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout
  title="Acerca de los premios ESLAND"
  description="Los Premios ESLAND son una iniciativa privada promovida por el célebre streamer TheGrefg y buscan apoyar y reconocer la creación de contenido en el ámbito hispanohablante."
>
  <HeroContainer img="/hero-info.webp">
    <h1
      class="text-5xl text-center leading-relaxed font-medium mb-20 font-tomaso tracking-widest"
    >
      {i18n.INFO.TITLE_HERO_1}<br />{i18n.INFO.TITLE_HERO_2}
    </h1>
  </HeroContainer>
  <main></main>
</Layout>
